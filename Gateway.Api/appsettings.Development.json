{
    "Jwt": {
        "Key": "THIS_IS_A_DEV_ONLY_SECRET_KEY_CHANGE_ME",
        "Issuer": "Auth.Api",
        "Audience": "Leave.Api",
        "ExpiryMinutes": 60
    },
    "ReverseProxy": {
        "Routes": {
            "dummyRoute": {
                "ClusterId": "dummyCluster",
                "Match": {
                    "Path": "/dummy/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/dummy" }
                ]
            },
            "auth": {
                "ClusterId": "authCluster",
                "Match": {
                    "Path":  "/api/auth/{**catch-all}"
                }
            }
        },
        "Clusters": {
            "dummyCluster": {
                "Destinations": {
                    "dummyApi": {
                        "Address": "https://localhost:7060"
                    }
                }
            },
            "authCluster": {
                "Destinations": {
                    "authApi": {
                        "Address": "https://localhost:7034"
                    }
                }
            }
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Information",
            "Yarp": "Trace"
        }
    }
}
